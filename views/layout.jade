doctype html
html
	head
		title= title
		link(rel='stylesheet', type='text/css' href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', type='text/css' href='/stylesheets/bootstrap-theme.css')
		link(rel='stylesheet', type='text/css' href='/stylesheets/style.css')
	body
		div.navbar.navbar-fixed-top.bg-black
			div.container.navbar-inner
				ul.nav.main-menu
					li.active
						a(href='/') 首页
					if !user
						li
							a(href='login') 登入
						li
							a(href='/reg') 注册
					else
						li
							a(href='logout') 登出
		div#container.container
			if success && success.length
				div.alert.alert-success= success
			else if error && error.length
				div.alert.alert-danger= error
			block content
			
	script(type='text/javascript', src='/javascripts/jquery-1.11.0.js')
	script(type='text/javascript', src='/javascripts/bootstrap.js')
